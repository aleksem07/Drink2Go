include ../mixins/mixins

header.header
  .wrapper
    include logo

    nav.header__menu.menu-nav
      //.menu__button--open - меняет состояние кнопки .menu__list--open - открывает меню

      button.menu-nav__button.menu__button--open(type='button' aria-expanded='false' aria-controls='menu-nav__list')
        .
          <svg class="menu-nav__icon" aria-hidden="true" width="16" height="16">
              <use class="menu-nav__icon-menu" href="img/stack.svg#menu"></use>
              <use class="menu-nav__icon-cross" href="img/stack.svg#cross"></use>
          </svg>

      ul.menu-nav__list.menu-site.menu__list--open
        +site-nav('Главная', href=pageClass === 'index-page' ? false : 'index.html')
        +site-nav('Каталог', href=pageClass === 'catalog-page' ? false : '#')
        +site-nav('Доставка', href=pageClass === 'catalog-page' ? false : '#')
        +site-nav('О нас', href=pageClass === 'catalog-page' ? false : '#')

      ul.menu-nav__list.menu-user
        +user-nav('Войти', 'navigation_user', '#')
        +user-nav('Корзина', 'navigation_union', '#')
